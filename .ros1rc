#!/bin/bash

ROS1_WS="ros1_ws"
ROS1_VER="kinetic"

if [ -d /opt/ros/lunar ]; then
    ROS1_VER="lunar"
elif [ -d /opt/ros/melodic ]; then
    ROS1_VER="melodic"
elif [ -d /opt/ros/noetic ]; then
    ROS1_VER="noetic"
fi

if [ -f /opt/ros/${ROS1_VER}/setup.bash ]; then
    source /opt/ros/${ROS1_VER}/setup.bash
fi

if [ -d ~/${ROS1_WS}/devel ]; then
    source ~/${ROS1_WS}/devel/setup.bash
fi

echo ".ros1rc: Loaded."
